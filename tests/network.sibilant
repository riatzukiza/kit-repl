(namespace network)

(include "../meta.sibilant")

(const PORT 8199)
(load "kit-interface/header"
        "../src/network"
        )

(var network (pipe Network .spawn
                   (.listen PORT)
                   (.on 'packet (aprint "recieved"))))

(then-pipe (.send network (lit (address 'localhost)
                               (port PORT)
                               (data "hello")))
           (aprint "sent"))

